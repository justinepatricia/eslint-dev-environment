{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules":{
        "no-unused-vars": "warn",
        "vars-on-top": "warn",
        "no-var": "warn",
        "no-plusplus": "warn"
    }
}